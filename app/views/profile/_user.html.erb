<div class="follower-feed">
    <div class="follower-feed-user-image">
        <img width="50px" height="50px" src="<%= user.picture.url %>" alt="<%= user.username %>">
    </div>
    <div class="follower-feed-name">
        <a href="/users/<%= user.id%>"><%= user.username %></a>
        <span class="verified"></span>
        <br>
        <span class="follower-description"><%= user.profile.description %></span>
    </div>
    <div class="follow-button">
        <% if user.id == current_user.id %>
          It's you
        <% elsif is_followed?(user.id) %>
          <button class="unfollow" followed="1" uid="<%= user.id %>">Unfollow</button>
        <% else %>
          <button class="follow" followed="0" uid="<%= user.id %>">follow</button>
        <% end %>
    </div>
</div>